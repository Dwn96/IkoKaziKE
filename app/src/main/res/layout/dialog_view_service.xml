<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minHeight="500dp"
    android:minWidth="300dp"
    >



    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarViewService"
        android:background="#ECB511"
        android:padding="0dp"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"

        >


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_baseline_person_17"

            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="#9C27B0"
            android:textStyle="bold"
            android:textColorHint="@color/hint_color"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_baseline_local_phone_17"
            android:autoLink="phone"

            />

        <TextView
            android:id="@+id/tv_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/ic_location"
             />


        <TextView
            android:id="@+id/tv_Rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_baseline_attach_money_24"

            />




        <TextView
            android:id="@+id/tv_distanceBetween"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textSize="15sp"

            />


        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ECB511"
            android:layout_marginTop="40dp"
             />


    </LinearLayout>

</LinearLayout>